.scrollView {
  height: 80vh;
  display: flex;
  justify-content: space-evenly;
}
.map{
  height:76vh;
  width: 100%;
}
.blank{
  height:100rpx;
  background-color: black;
}
.date{
  position: absolute;
  left: 50%;
  top: 20%;
  transform: translate(-50%, -50%);
  font-size: 60rpx;
  
}
.background{
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
  filter: blur(20rpx);
}
.content {
 width: 40vw;
 height: 10vh;
